<div id="signup_modal">
    <i class="fa fa-times" aria-hidden="true"></i>
    <div class="modal_content">
        <h1>Sign Up</h1>
        <form class="signup" method="post">
            <div class="form_group" style="top: 40%;">
                <label>Email:</label><br>
                <input type="text" name="email"><br><br>
            </div>  
            <div class="form_group" style="top: 60%;">
                <label>First Name:</label><br>
                <input type="text" name="fname"><br><br>
            </div>
            <div class="form_group" style="top: 80%;">
                <label>Last Name:</label><br>
                <input type="text" name="lname"><br><br>
            </div>    
            <div class="form_group" style="right: 0; top: 40%;">
                <label>Password:</label><br>
                <input type=password name="password"><br><br>
            </div>
            <div class="form_group" style="right: 0; top: 60%;">
                <label>Confirm Password:</label><br>
                <input type="password" name="cpassword"><br><br>
            </div>    
            <div class="form_group" style="left: 50%; top: 100%; transform: translate(-50%, 100%);">
                <input type="submit" value="Sign Up" class="login_button">
            </div>     
        </form>
    </div>
</div>


<style type="text/css">
    #signup_modal {
        display: none;
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.4);
        overflow: hidden;
        z-index: 1;
    }
    
    #signup_modal i {
        font-size: 40px;
        color: white;
        position: absolute;
        cursor: pointer;
        top: 10%;
        left: 10%
    }
    
    #signup_modal .modal_content {
        width: 60%;
        margin: 5% auto;
        height: 500px;
        background-color: #f2f2f2;
        border-radius: 10px;
        position: relative;
    }
    
    #signup_modal .modal_content h1 {
        font-family: 'Roboto', sans-serif;
        color: #0059b3;
        text-align: center;
        position: relative;
        margin-top: 60px;
        font-size: 90px;
    }
    
    #signup_modal .modal_content form {
        width: 90%;
        height:100%;
        position: absolute;
        bottom: 10px;
    }
    
    #signup_modal .modal_content label {
        font-family: 'Roboto', sans-serif;
        font-size: 30px;
    }
    
    #signup_modal .modal_content input {
        padding: 10px;
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
        
    }
    
    #signup_modal .modal_content .login_button {
        font-family: 'Roboto', sans-serif;
        font-size: 20px;
        padding: 20px;
    }
    
    #signup_modal .form_group {
        position: absolute;
    }
</style>

<script>
    
    $(document).ready(function(){
        $('.signup').click(function(){
            $('#signup_modal').fadeIn();    
        });  
        $('i').click(function(){
            $('#signup_modal').fadeOut();    
        });
    });

</script>